@model MMi_BIS_PA.Models.master_table




@{
    ViewBag.Title = "Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .bg-success {
        color: #FFFFFF;
        font-weight: bold;
        text-align: center;
    }

    .fail {
        color: #FFFFFF;
        background-color: #F53B3B;
        font-weight: bold;
        text-align: center;
    }

    .center {
        text-align: center;
    }
</style>

<div class="container-fluid">
    <div class="row">

        @Html.Partial("~/Views/Shared/_NavBar.cshtml")

    </div>
    <div class="row"><pre>   </pre></div>
    <div class="row"><pre>   </pre></div>

    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">
            <div class="card shadow mb-3" style="width: 100%; height:100%">
                <div class="card-header" style="padding:0;background-color:#004883; height:50px">
                    <div style="float:left; padding:12px 20px 12px 20px; font-weight:bold; color:#fff; height:100%; width:100%;">Master </div>


                </div>
                <div class="card-body">
                    <div class="container-fluid">
                        <div class="row" style="height:100%">

                            <div class="container-fluid" style="height:100%">

                                <div class="row" style="height:inherit">


                                    <div class="container-fluid" style="height:100% ">

                                       

                                        @using (Html.BeginForm("AddMaster", "Master"))
                                        {

                                            <h1><pre>    </pre></h1>
                                           
                                            
                                            <div class="form-group">
                                                <label for="wd" class="col-md-4 col-form-label text-md-left">IP Address</label>

                                                @Html.TextBoxFor(m => m.IP_Address, new { @class = "form-control" })


                                            </div>
                                           

                                            <div class="form-group">
                                                <label for="wd" class="col-md-4 col-form-label text-md-left">Weight Diffrence</label>

                                                @Html.TextBoxFor(m => m.Weight_Diffrence, new { @class = "form-control" })


                                            </div>

                                            <div class="form-group">
                                                <label for="wd" class="col-md-4 col-form-label text-md-left">Barcode Length</label>

                                                @Html.TextBoxFor(m => m.Barcode_Length, new { @class = "form-control" })

                                            </div>


                                            <button type="submit" class="btn btn-primary">Save</button>

                                        }





                                    </div>




                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>






